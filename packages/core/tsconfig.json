{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "./src",
        "composite": true,
        "outDir": "types",
        "declaration": true,
        "emitDeclarationOnly": true,
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src/**/*"],
    "tsc-alias": {
        "resolveFullPaths": true,
        "fileExtensions": [".d.ts"]
    }
}
